<div class="row">
    <div class="col-md-4">
        <form action="/send-sms" method="POST" class="card card-body">
            <div class="form-group">
                <input type="text" name="mensaje" class="form-control" placeholder="escribe un mensaje" autofocus autocomplete="off">
            </div>
            <div class="form-group">
                <input type="tel" name="telefono" class="form-control" placeholder="escribe el numero de telefono " autofocus autocomplete="off">
            </div>
            <button class="btn btn-primary btn-block">
                Enviar ! 
            </button>
        </form>
    </div>
    <div class="col-md-8">
        
        <h2>Mensajes de este numero: </h2>
        {{#if mensajes}}
        <div class="card card-body">
            <ul class="list-group" style="height: 70vh; overflow-y:auto;" id="mensaje">
                {{#each mensajes}}
                {{#if To}}
                <div class="list-group-item  ist-group-action">
                    <p>Mensaje: {{Body}}</p><br>
                    <span> id : {{_id}}</span><br>
                    <span> Enviado a : {{To}}</span><span>  {{timeago createdAt}}</span><br>
                </div>
                {{else}}
                <div class="list-group-item table-primary ist-group-action" id="mensaje">
                    <p>Mensaje: {{Body}}</p><br>
                    <span> id : {{_id}}</span><br>
                    <span> Recibido de : {{ From}}</span><span> {{timeago createdAt}}</span><br>
                    
                </div>
                {{/if}}
                {{/each}}
                
            </ul>
        </div>
        {{else}}
        <p>no hay mensajes enviados </p>
        {{/if}}
    </div>
</div>